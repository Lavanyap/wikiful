<head>
	<style type ="text/css">
.color1{
	font color: #CCCCCC;
}
</style>
</head>
<body>
<div>
<h1> List of Articles</h1>
</div>

	<table class="table table-striped">
	<tr>
		<th>Title</th>
		<th>Published date</th>
		<th>Category</th>
		<th>Content</th>
	</tr>

	<% @articles.each do |article| %>
  	<tr>
  		<td><h5><%= link_to article.title, article %></h5></td>
        <td class="color1"><p><%= article.created_at.strftime('%b %d, %Y') %></p></td>
    	<td><p><% article.categories.each do |category| %>
                      <%= link_to category.name, category %>
                 <% end %></p></td>
    	<td class="color1"><p><%= truncate(article.content, length: 200) %></p></td>
    </tr>
  
	<% end %>

</table>
</body>



